<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/grey"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frameFront"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:text="Survey ID"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/surveyId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Household"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:text="Category"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Others"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="12sp"

                        android:text="Sub-Category"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvSubCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Household"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:text="Sub-Category Others"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvSubCategoryOthers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Others"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="12sp"

                        android:text="Locality"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvLocality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Shillong"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:text="Respondent /Owner Name"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvOwner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Owner Name"
                        android:textSize="12sp"
                        android:padding="3dp"
                        android:textColor="#000000"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgLink"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="-10dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_link" />

    </FrameLayout>

</LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>